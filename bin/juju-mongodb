#!/bin/bash
set -e
if [ "$JUJU_ENV" = "local" ]; then
  PASSWORD="`sudo grep oldpassword ~/.juju/local/agents/machine-0/agent.conf | cut -d' ' -f2`"
  echo "After you're connected run use juju"
  mongo 127.0.0.1:37017/admin --ssl --username "admin" --password ${PASSWORD} 
else
  PASSWORD=`juju ssh 0 "sudo grep oldpassword /var/lib/juju/agents/machine-*/agent.conf  | cut -d' ' -f2"`
  juju ssh 0 sudo apt-get install mongodb-clients
  PASSWORD=`echo ${PASSWORD} | perl -lpe 's/[^[:print:]]//g'`
  juju ssh 0 "mongo 127.0.0.1:37017/admin --ssl --username admin --password ${PASSWORD}"
fi
